  <div class="grid md:grid-cols-3 gap-4 mt-9">
    <ProjectCard
      title={GeofisicaHub.title}
      description={GeofisicaHub.description}
      url={GeofisicaHub.url}
      tags={GeofisicaHub.tags}
    />
    <ProjectCard
      title={GeofisicaApp.title}
      description={GeofisicaApp.description}
      url={GeofisicaApp.url}
      tags={GeofisicaApp.tags}
    />
    <ProjectCard
      title={Andromeda.title}
      description={Andromeda.description}
