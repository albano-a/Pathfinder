---
import MainLayout from "../layouts/MainLayout.astro";

import ProjectCard from "../components/ProjectCard.svelte";

let GeofisicaHub = {
  title: "GeofisicaHub",
  description:
    "GeofisicaHub is a website built by geophysicists for geophysicists",
  url: "https://geofisicahub.me/",
  tags: ["geophysics", "tools"],
};
let GeofisicaApp = {
  title: "GeofisicaApp",
  description:
    "GeofisicaApp is a toolkit for Gephysicists and Geologists workflows",
  url: "https://geofisica.streamlit.app/",
  tags: ["geophysics", "tools", "geology"],
};
let Andromeda = {
  title: "Andromeda",
  description:
    "Andromeda is a seismic inversion software built by GIECAR-UFF for the oil and gas company, Prio.",
